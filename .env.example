# ==============================================================================
# TFBOT CONFIGURATION FILE
# ==============================================================================

# Mode selection: YES for TEST mode, NO for LIVE mode, or leave blank for old format compatibility
# TFBOT_TEST=YES  # Use TEST configuration
# TFBOT_TEST=NO   # Use LIVE configuration
TFBOT_TEST=

# ==============================================================================
# UNIVERSAL SETTINGS (Shared between TEST and LIVE)
# ==============================================================================

# Discord Authentication
DISCORD_TOKEN=  # Default token (used as fallback if mode-specific tokens are blank)

# File Paths
TFBOT_STATE_FILE=tf_state.json  # Active TF state storage
TFBOT_STATS_FILE=tf_stats.json  # Lifetime statistics storage
TFBOT_REROLL_FILE=tf_reroll.json  # Reroll cooldown timestamps
TFBOT_REPLY_LOG=transform_replies.json  # Recent VN reply snippets
TFBOT_CHARACTERS_FILE=  # Optional JSON character dataset (defaults to tf_characters.py)
TFBOT_AVATAR_ROOT=  # Base folder for avatar paths when using custom dataset
TFBOT_INANIMATE_FILE=tf_inanimate.json  # Inanimate TF entries
TFBOT_RP_STATE_FILE=rp_forum_state.json  # Roleplay forum state
TFBOT_GAME_ASSETS_DIR=games/assets  # Game assets directory
TFBOT_GAME_CONFIG_FILE=games/game_config.json  # Game config file path

# Visual Novel Panel Rendering
TFBOT_VN_BASE=vn_assets/vn_base.png  # Base PNG panel for VN mode
TFBOT_VN_FONT=  # Optional single-font override (leave blank to use individual fonts)
TFBOT_VN_FONT_BOLD=fonts/Ubuntu-B.ttf  # Bold font
TFBOT_VN_FONT_REGULAR=fonts/Ubuntu-R.ttf  # Regular font
TFBOT_VN_FONT_ITALIC=fonts/Ubuntu-I.ttf  # Italic font
TFBOT_VN_FONT_BOLD_ITALIC=fonts/Ubuntu-BI.ttf  # Bold italic font
TFBOT_VN_EMOJI_FONT=fonts/NotoEmoji-VariableFont_wght.ttf  # Emoji fallback font
TFBOT_VN_GAME_ROOT=  # Student Transfer installation root (enables sprite composition)
TFBOT_CHARACTERS_REPO=  # Optional: Git repo URL for character sprites
TFBOT_CHARACTERS_REPO_DIR=characters_repo  # Destination directory for cloned repo
TFBOT_CHARACTERS_REPO_SUBDIR=characters  # Relative folder inside repo pointing to characters directory
TFBOT_VN_OUTFIT=casual.png  # Default outfit file
TFBOT_VN_FACE=0.png  # Default face file
TFBOT_VN_AVATAR_MODE=game  # game to compose sprites, user to reuse member avatar
TFBOT_VN_AVATAR_SCALE=1.0  # Global scale factor for character sprites
TFBOT_VN_CACHE_DIR=vn_cache  # Directory for cached composite sprites (empty string disables)
TFBOT_VN_SELECTIONS=tf_outfits.json  # Per-character outfit selections
TFBOT_VN_NAME_SIZE=34  # Font size for VN nameplate
TFBOT_VN_TEXT_SIZE=26  # Font size for VN dialogue text

# Background Selection
TFBOT_VN_BG_ROOT=characters_repo/bg  # Root folder containing background images
TFBOT_VN_BG_DEFAULT=school/cafeteria.png  # Default background path relative to root
TFBOT_VN_BG_SELECTIONS=tf_backgrounds.json  # User background selections

# AI Rewrite Settings (optional)
TFBOT_AI_REWRITE=false  # Enable GPT-based rewrites
TFBOT_AI_API_KEY=  # OpenAI API key (or use OPENAI_API_KEY)
TFBOT_AI_MODEL=gpt-3.5-turbo-1106  # Chat model
TFBOT_AI_MAX_TOKENS=80  # Maximum tokens in AI-generated rewrite
TFBOT_AI_TEMPERATURE=0.5  # Temperature (0.0-2.0, higher = more creative)
TFBOT_AI_TIMEOUT=2.0  # Request timeout in seconds
TFBOT_AI_CONCURRENCY=1  # Number of concurrent AI requests
TFBOT_AI_BACKOFF=1.5  # Backoff multiplier for retries
TFBOT_AI_MIN_INTERVAL=0.75  # Minimum interval between AI requests (seconds)
TFBOT_AI_SYSTEM_PROMPT=  # Optional custom system prompt for rewrites

# Gacha Mode Settings (optional)
TFBOT_GACHA_CHANNEL_ID=  # Channel ID for gacha conversation (required when TFBOT_MODE=gacha)
TFBOT_GACHA_GUILD_ID=  # Optional guild ID to restrict gacha commands to specific server
TFBOT_GACHA_DB_PATH=tfbot_gacha.sqlite3  # SQLite database for gacha progress
TFBOT_GACHA_CONFIG=gacha_config.example.json  # JSON file with rarity overrides and starter pools
TFBOT_GACHA_STARTING_COINS=1200  # Rudy coins granted to new players
TFBOT_GACHA_EARN_PER_MESSAGE=3  # Rudy coins earned per eligible message
TFBOT_GACHA_MIN_WORDS=3  # Minimum words required to earn Rudy coins
TFBOT_GACHA_CHARACTER_ROLL_COST=350  # Cost in Rudy coins to roll a new character
TFBOT_GACHA_OUTFIT_ROLL_COST=150  # Cost in Rudy coins to roll an outfit
TFBOT_GACHA_DUPLICATE_CHARACTER_FROG=2  # Frog coins granted for duplicate character
TFBOT_GACHA_DUPLICATE_OUTFIT_FROG=1  # Frog coins granted for duplicate outfit
TFBOT_GACHA_FROG_TO_RUDY_RATE=50  # Rudy coins received per frog coin traded
TFBOT_GACHA_FROG_BOOST_COST=5  # Frog coins required to buy rarity boost
TFBOT_GACHA_FROG_BOOST_BONUS=0.15  # Additional weight for rare/epic drops during boost (0.15 = +15%)
TFBOT_GACHA_FROG_BOOST_ROLLS=2  # Number of rolls the boost lasts


# ==============================================================================
# LIVE MODE CONFIGURATION
# ==============================================================================

# Core Behavior

DISCORD_TOKEN_LIVE=  # Token for LIVE mode (overrides DISCORD_TOKEN if set, otherwise uses DISCORD_TOKEN)

TFBOT_NAME_LIVE=  # Your bot's display name
TFBOT_VERSION_LIVE=  # Your bot version
TFBOT_CHANCE_LIVE=1.00  # Chance (0.0-1.0) that any non-command message triggers a TF
TFBOT_PREFIX_LIVE=!  # Command prefix for bot commands
TFBOT_LOG_LEVEL_LIVE=INFO  # Python logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
TFBOT_MODE_LIVE=game  # Operating mode: classic, gacha, or game
TFBOT_MESSAGE_STYLE_LIVE=vn  # classic for embeds, n for visual novel panels

# Channel IDs
TFBOT_CHANNEL_ID_LIVE=  # Channel where bot listens for TF rolls
TFBOT_HISTORY_CHANNEL_ID_LIVE=  # Channel that receives TF history snapshots
TFBOT_ARCHIVE_CHANNEL_ID_LIVE=  # Channel where intercepted originals are archived
TF_CHARACTER_INFO_FORUM_CHANNEL_ID_LIVE=  # Optional forum channel for character info
TFBOT_HISTORY_DEV_CHANNEL_ID_LIVE=  # Optional dev-history channel
TFBOT_SUBMISSION_CHANNEL_ID_LIVE=  # Channel where !submit is allowed (blank to disable)
TFBOT_HISTORY_SNAPSHOT_CHANNEL_LIVE=  # Optional override for history snapshot channel
TFBOT_GACHA_CHANNEL_ID_LIVE=  # Gacha channel (if using gacha mode)
TFBOT_GACHA_GUILD_ID_LIVE=  # Optional guild ID for gacha commands
TFBOT_GAME_FORUM_CHANNEL_ID_LIVE=  # Forum channel for gameboard game threads
TFBOT_GAME_MAP_FORUM_CHANNEL_ID_LIVE=  # Forum channel for gameboard map threads
TFBOT_GAME_DM_CHANNEL_ID_LIVE=  # Optional DM channel for GM commands
TFBOT_RP_FORUM_POST_ID_LIVE=  # Roleplay forum post ID

# Special Forms & Weights
TFBOT_MAGIC_EMOJI_NAME_LIVE=magic_emoji  # Emoji name used to prefix TF narration
TFBOT_SPECIAL_FORMS_LIVE=Ball,Narrator,Mirra  # Special forms with narrator-style privileges
TFBOT_FEATURED_TF_WEIGHTS_LIVE=  # Optional token=weight entries to bias random TFs (e.g., narrator=3,ball=1.25)

# Feature Toggles
TFBOT_ADMIN_PROTECTION_ENABLED_LIVE=false  # Enable Ball/Narrator perk protections on admins
TFBOT_SPECIAL_CHARACTERS_ADMIN_ONLY_LIVE=true  # Restrict special characters to admin-only random rolls
TFBOT_INANIMATE_ENABLED_LIVE=false  # Enable inanimate object transformations
TFBOT_GAMEBOARD_ENABLED_LIVE=false  # Enable/disable gameboard system
TFBOT_INANIMATE_CHANCE_LIVE=0.0  # Chance (0.0-1.0) to pick an inanimate TF after a standard roll

# Transformation Durations (minutes)
TF_INANIMATE_DURATION_LIVE=10  # Reroll durations for inanimate TFs (comma/semicolon separated)
TF_SPECIAL_DURATION_LIVE=1440  # Reroll durations for special form TFs (comma/semicolon separated)
TF_GENERIC_DURATION_LIVE=6024365  # Reroll durations for generic TFs (comma/semicolon separated)

# Other Settings
TFBOT_FACE_SYNC_HOURS_LIVE=3  # How often to sync faces from remote (in HOURS)


